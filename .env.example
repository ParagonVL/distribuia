# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Groq API (Llama 3.1 70B)
GROQ_API_KEY=your-groq-api-key

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Stripe Price IDs
NEXT_PUBLIC_STRIPE_PRICE_STARTER_MONTHLY=price_...
NEXT_PUBLIC_STRIPE_PRICE_PRO_MONTHLY=price_...

# App URL (used for Stripe redirects)
NEXT_PUBLIC_APP_URL=https://distribuia.com

# Cron Job Secret (for Vercel Cron)
CRON_SECRET=your-secure-cron-secret

# Resend (Transactional Emails)
RESEND_API_KEY=re_...

# Supabase Webhook Secret (for auth webhooks)
SUPABASE_WEBHOOK_SECRET=your-webhook-secret

# Site Access Token (optional - leave empty to disable protection)
# Used to protect the site during development/beta
SITE_ACCESS_TOKEN=

# Upstash Redis (for rate limiting - optional but recommended)
# Get free tier at https://upstash.com
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Sentry (for error tracking - optional but recommended)
# Get free tier at https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=
